<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<% if admin_signed_in? %>
    <span>Hello, <%= current_admin.email %></span>
    <%= link_to 'Log out', destroy_admin_session_path, :method => :delete %>
<% else %>
    <%= link_to 'Sign in', new_admin_session_path %> or <%= link_to 'Sign up', new_admin_registration_path %>
<% end %>
<h1>Listing cities</h1>

<table class='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hotels count</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.hotels.count %></td>
        <td><%= link_to 'List hotels', admin_city_hotels_path(city) %></td>
        <td><%= link_to 'Details', admin_city_path(city) %></td>
        <td><%= link_to 'Edit city', edit_admin_city_path(city) %></td>
        <td><%= link_to 'Destroy city', admin_city_path(city), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City', new_admin_city_path %>
